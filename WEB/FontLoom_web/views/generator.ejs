            <h3>Paragraph â€“ <span class="current-font">Dancing Script</span></h3>
            <button class="lock-btn" data-target="paragraph">ðŸ”“</button>
          </div>
          <textarea class="ta-default" data-target="paragraph" style="font-family: 'Dancing Script', cursive">The quick brown fox jumps over the lazy dog.1 2 3 4 5 6 7 8 9 0</textarea>
          <div class="font-size-control">
            <label>Font Size: <span class="size-value">25px</span></label>
            <input type="range" min="12" max="48" value="25" class="size-slider" data-target="paragraph" />
          </div>
          <button class="generate-btn btn btn-outline-primary" data-target="paragraph">
            Generate Style
          </button>
        </div>
      </div>

      <div class="global-actions">
        <button class="generate-all-btn btn btn-primary" style="cursor: pointer;">
          Generate All Styles
        </button>
      </div>
    </div>
  </section>

  <script type="module"  src="/js/generator.js"></script>