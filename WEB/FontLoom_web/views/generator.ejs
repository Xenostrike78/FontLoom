<% layout('base') %>
  <link rel="stylesheet" href="/css/generator.css" />
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&family=Inter:wght@400;600&display=swap"
    rel="stylesheet" />

  <section class="generator-section">
    <div class="container">
      <div class="generator-header">
        <h1 class="generator-title">Font Generator</h1>
        <p class="generator-description">
          Intelligent font recommendations based on default or locked selections.
        </p>
      </div>

      <div class="styling-container">
        <!-- Heading -->
        <div class="style-box" data-font-default="Playfair Display">
          <div class="box-header">
            <h3>Heading - <span class="current-font">Playfair Display</span></h3>
            <button class="lock-btn" data-target="heading">ðŸ”“</button>
          </div>
          <textarea class="ta-default" data-target="heading" style="font-family: 'Playfair Display', serif">
The quick brown fox jumps over the lazy dog.</textarea>
          <div class="font-size-control">
            <label>Font Size: <span class="size-value">35px</span></label>
            <input type="range" min="20" max="80" value="35" class="size-slider" data-target="heading" />
          </div>
          <button class="generate-btn btn btn-outline-primary" data-target="heading">
            Generate Style
          </button>
        </div>

        <!-- Subheading -->
        <div class="style-box" data-font-default="Inter">
          <div class="box-header">
            <h3>Subheading â€“ <span class="current-font">Inter</span></h3>
            <button class="lock-btn" data-target="subheading">ðŸ”“</button>
          </div>
          <textarea class="ta-default" data-target="subheading" style="font-family: 'Inter', sans-serif;">
The quick brown fox jumps over the lazy dog.</textarea>
          <div class="font-size-control">
            <label>Font Size: <span class="size-value">30px</span></label>
            <input type="range" min="16" max="60" value="30" class="size-slider" data-target="subheading" />
          </div>
          <button class="generate-btn btn btn-outline-primary" data-target="subheading">
            Generate Style
          </button>
        </div>

        <!-- Paragraph -->
        <div class="style-box" data-font-default="Dancing Script">
