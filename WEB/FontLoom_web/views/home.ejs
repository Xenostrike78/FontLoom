<% layout('base') %>

<link rel="stylesheet" href="/css/home.css">


<section class="hero-section">
  <div class="container">
    <h1 class="hero-title" data-testid="text-hero-title">FontLoom</h1>
    <p class="hero-subtitle" data-testid="text-hero-subtitle">
      Discover the perfect typography for your projects with AI-powered recommendations, 
      curated galleries, and personalized font suggestions tailored to your unique style.
    </p>
    <a href="/gallery" class="btn btn-primary cta-button" data-testid="button-cta">
      Start Exploring Fonts
    </a>
  </div>
</section>

<section class="features-section">
  <div class="container">
    <h2 class="features-title" data-testid="text-features-title">Explore FontLoom</h2>
    
    <div class="features-grid">
      <a href="/generator" class="feature-card" data-testid="card-feature-generator">
        <div class="feature-icon">Aa</div>
        <h3 class="feature-title">Font Generator</h3>
        <p class="feature-description">
          Enter any font name and discover intelligent recommendations based on style, 
          category, and perfect pairings. Our algorithm suggests fonts that complement 
          your choice beautifully.
        </p>
      </a>
      
      <a href="/gallery" class="feature-card" data-testid="card-feature-gallery">
        <div class="feature-icon">Ag</div>
        <h3 class="feature-title">Curated Gallery</h3>
        <p class="feature-description">
          Browse expertly organized font collections grouped by style and purpose. 
          From timeless classics to modern professionals, find inspiration in our 
          carefully curated clusters.
        </p>
      </a>
      
      <a href="/personalized" class="feature-card" data-testid="card-feature-personalized">
        <div class="feature-icon">Ap</div>
        <h3 class="feature-title">Personalized Picks</h3>
        <p class="feature-description">
          Select fonts you love and let our system learn your preferences. 
          Receive tailored recommendations that match your unique typographic taste 
          and creative vision.
        </p>
      </a>
    </div>
  </div>
</section>
